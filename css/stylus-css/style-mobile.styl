.navigator
  display none

burgerWidth = 35px
burgerHeight = 24px
lineHeight = 2px
.nav
  position absolute
  right 20px
  width burgerWidth
  height burgerHeight
.nav__line
  width burgerWidth
  height lineHeight
  position absolute
  top: 40%;
  background #717171

  z-index 1
.nav__line::after
.nav__line::before
  background #717171
  width 100%
  height lineHeight
  position absolute
  right 0
.nav__line::after
  content: ""
  top 10px
.nav__line::before
  content: ""
  top -10px

.nav.active .nav__line
  background: none
.nav.active .nav__line:before
  top: 0
  transform:rotate(45deg)
.nav.active .nav__line:after
  top: 0
  transform:rotate(135deg)
.nav.active .navigator
  border-radius: 10px
  display block
  position absolute
  top -10px
  right 0
  padding-left: 15px
  background rgb(175, 162, 162)
  width 150px
  height 125px
.welcome__img 
  display none
div[class$="content"]
  width 100%
.section-style
  flex-direction: column
  align-items: center
.service__head
  flex-direction: column
  align-items start
  height 60px
.price__img
  display none
.price-content
  align-items center
.contacts__content
  flex-direction: column
  align-items: center
.footer
  flex-direction: column;